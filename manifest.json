{
  "manifest_version": 2,
  "name": "Vetd - Sales Email Gatekeeper",
  "version": "1.0",
  "description": "Block sales emails and automatically forward them to Vetd to evaluate for you.",
  "permissions": [
    "storage",
    "tabs",

    // for local testing
    // "http://localhost/",
    // "http://localhost:5080/",
    
    "https://mail.google.com/",
    "https://inbox.google.com/",
    "https://app.vetd.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://inbox.google.com/*"
      ],
      "js": ["inboxsdk.js", "app.js"]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      // for local testing
      // "http://localhost/*",
      // "http://localhost:5080/*",
      
      "https://app.vetd.com/*"
    ]
  },
  "web_accessible_resources": [
    "icon.png"
  ],
  "icons": {
    "128": "icon.png"
  }
}
